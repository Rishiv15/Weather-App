<%- include ('./partials/header2') %>
<style>

body {
  padding: 2rem 0rem;
}
#iv{
    background-color: bisque;
    width:1000px;
    height: 620px;
    margin-bottom: 20px;
    
}
.card-img {
    
    background-repeat: no-repeat;
  
  background-size: cover;
  border-bottom-left-radius: 0px;
  border-bottom-right-radius: 0px;
  margin:1px;
}

.card-title {
  margin-bottom: 0.3rem;
}

.cat {
  display: inline-block;
  margin-bottom: 1rem;
}

.fa-users {
  margin-left: 1rem;
}
#bcard{
    position: relative;
    max-height: 100px;
    font-size: inherit;
    
}
.card-footer {
  font-size: 0.8rem;
}
</style>
<%=posts %>
<div class="container">
    <% for(i=0;i < posts.length ;i++){ %>
    <div class="row">
      
        <div class="card" id="iv">
          <div class="container">
          <img class="card-img" style="width: 1000px; height: 250px; padding: 1px; " src="https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/pasta.jpg" alt="Bologna">
          <div class="card-img-overlay" style="height: 5px;width: 10px;">
            <a href="#" class="btn btn-light btn-sm"><%=posts[i].place %></a>
          </div>
          
          <div class="card-body" id="bcard">
            <h4 class="card-title"><%=posts[i].title %></h4>
            <small class="text-muted cat">
              <i class="far fa-clock text-info"></i> 30 minutes
              <i class="fas fa-users text-info"></i> 4 portions
            </small>
            <p class="card-text"><%=posts[i].description %>
                </p>
               
          
          
            <div class="views">Created: <%=posts[i].created.toDateString() %>
            </div>
       
          </div>

          </div>
      
    </div>
    <% } %>
</div>
<%- include ('./partials/footer') %>