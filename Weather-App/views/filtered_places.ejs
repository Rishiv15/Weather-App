<%- include ('./partials/header') %>

   <div class="container">
        <% if(ret){ %>
            <div class="row justify-content-between pl-5">
                <% for(var i=0; i<ret.length; i++){ %>
                    <div class="col-md-6 col-sm-12">
                        <div class="card text-white bg-secondary mb-5 adjust">
                            <img class="card-img-top card-image" src="<%= ret[i].image %>" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title"><%= ret[i].place %></h5>
                                <p class="card-text"><i class="fas fa-temperature-high mr-2"></i>Temp: <%= ret[i].temp %><sup>o</sup>C</p>
                                <p class="card-text"><i class="fas fa-tint mr-3"></i>Humidity: <%= ret[i].humidity %>%</p>
                                <a class="btn btn-success view_more" href="/tourism/<%= ret[i]._id %>">View More Info</a>
                            </div>
                            <div class="card-footer text-white">
                                <small>Best Season to visit: <%= ret[i].season %></small>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
            
        <% } %>
   </div>
    
    

<%- include ('./partials/footer.ejs') %>