<%- include ('./partials/header2') %>
<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card" style="height: 700px;" id="login-card">
			<div class="card-header">
				<h3>Describe Your Experience!!!!!!</h3>
			</div>
			<div class="card-body">
				<form action="/create_post" method="POST">
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"></i></span>
						</div>
						<input type="text" name="title" class="form-control" placeholder="Title for your Post" required>
                    </div>
                    <div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"></i></span>
						</div>
						<input type="text" name="place" class="form-control" placeholder="Place visited">
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"></i></span>
						</div>
						<input type="text" name="image" class="form-control" placeholder="Image URL">
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"></i></span>
						</div>
						<input type="text" name="author" class="form-control" placeholder="Author">
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"></i></span>
						</div>
						<input type="text" name="month" class="form-control" placeholder="Visited month">
                    </div>
                    

                    <div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"></i></span>
						</div>
						<textarea  class="form-control" name="description"  cols="40" rows="10" placeholder="Describe Your Experience"></textarea>
					</div>
					<div class="form-group">
						<input type="submit" value="Create Post" class="btn float-right login_btn">
					</div>
				</form>
			</div>
			
		</div>
	</div>
</div>

<%- include ('./partials/footer') %>